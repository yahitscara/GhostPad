<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App Sandbox (required for Mac App Store) -->
	<key>com.apple.security.app-sandbox</key>
	<true/>

	<!-- User Selected Files - Read/Write (for opening and saving notes) -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>

	<!-- Network Client (for update checking via GitHub API) -->
	<key>com.apple.security.network.client</key>
	<true/>

	<!-- Allows the app to use NSAppleScript and related classes -->
	<key>com.apple.security.scripting-targets</key>
	<dict>
		<key>com.apple.applescript</key>
		<array>
			<string>com.apple.scripteditor</string>
		</array>
	</dict>
</dict>
</plist>
