{
  "name": "ghostpad",
  "version": "1.0.5",
  "description": "GhostPad - A transparent overlay notebook for macOS, Windows, and Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux"
  },
  "keywords": [
    "notebook",
    "transparent",
    "overlay",
    "electron"
  ],
  "author": {
    "name": "yahitscara",
    "email": "yah.its.cara@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.ghostpad.app",
    "productName": "GhostPad",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "artifactName": "${productName}-${arch}.${ext}"
    },
    "dmg": {
      "artifactName": "${productName}-${arch}.${ext}"
    },
    "nsis": {
      "artifactName": "${productName}-Setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "appx"
      ],
      "icon": "build/icon.png",
      "publisherName": "CN=YourPublisherName"
    },
    "appx": {
      "applicationId": "GhostPad",
      "displayName": "GhostPad",
      "publisherDisplayName": "yahitscara",
      "identityName": "YourIdentityName",
      "publisher": "CN=YourPublisherName",
      "backgroundColor": "#1e1e2e",
      "languages": ["en-US"]
    },
    "appImage": {
      "artifactName": "${productName}.${ext}"
    },
    "deb": {
      "artifactName": "${name}_amd64.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.1"
  }
}
